<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>

	<appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
		<appender-ref ref="FILE" />
	    <!-- <appender-ref ref="CONSOLE" /> -->
	</appender>
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM-dd HH:mm:ss.SSS}] [%p] [%C{1}] [%t] %m%n" />
		</layout>
	</appender>

	<appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Append" value="true" />
		<param name="File" value="/opt/logs/hermes-broker/hermes-broker.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM-dd HH:mm:ss.SSS}] [%p] [%C{1}] [%t] %m%n" />
		</layout>
	</appender>

	<appender name="BIZ" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Append" value="true" />
		<param name="File" value="/opt/logs/hermes-broker/biz.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>

	<logger name="biz" additivity="false">
		<level value="INFO" />
		<appender-ref ref="BIZ" />
	</logger>

	<logger name="com.mchange.v2">
		<level value="INFO" />
		<appender-ref ref="ASYNC" />
	</logger>

	<logger name="org.apache.http">
		<level value="WARN" />
		<appender-ref ref="ASYNC" />
	</logger>

	<logger name="com.ctrip.hermes.core.transport.endpoint.DefaultServerChannelInboundHandler">
		<level value="ERROR" />
		<appender-ref ref="ASYNC" />
	</logger>

	<logger name="org.apache.zookeeper">
		<level value="WARN" />
		<appender-ref ref="ASYNC" />
	</logger>

	<root>
		<priority value="info" />
		<appender-ref ref="ASYNC" />
	</root>

</log4j:configuration>  